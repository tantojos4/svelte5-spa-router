{
	"name": "svelte5-spa-router",
  "version": "1.2.1",
  "description": "A simple, flexible, and lightweight SPA router specifically designed for Svelte 5 with runes support (dev/non-stable, not production ready)",
	"keywords": [
		"svelte",
		"svelte5",
		"router",
		"spa",
		"routing",
		"navigation",
		"runes",
		"client-side",
		"single-page-app",
		"history-api",
		"dynamic-routing"
	],
	"homepage": "https://github.com/tantojos4/svelte5-spa-router#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tantojos4/svelte5-spa-router.git"
	},
	"bugs": {
		"url": "https://github.com/tantojos4/svelte5-spa-router/issues"
	},
	"license": "MIT",
	"author": "Hartanto Yohanes <hartantoyohanes4@gmail.com>",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"prepare": "echo \"Skipping svelte-kit sync for non-kit projects\"",
		"package": "svelte-package && cp src/lib/*.svelte dist/ && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run test:unit -- --run",
		"test:unit": "vitest",
		"test:coverage": "vitest --coverage",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/*.test.d.ts",
		"!dist/**/*.bak"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./Router.svelte": "./dist/Router.svelte",
		"./Link.svelte": "./dist/Link.svelte",
		"./package.json": "./package.json"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"@sveltejs/kit": {
			"optional": true
		}
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.0.1",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@storybook/addon-a11y": "^9.0.18",
		"@storybook/addon-docs": "^9.0.18",
		"@storybook/addon-svelte-csf": "^5.0.7",
		"@storybook/addon-vitest": "^9.0.18",
		"@storybook/sveltekit": "^9.0.18",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.0.18",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.1.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"storybook": "^9.0.18",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	}
}
